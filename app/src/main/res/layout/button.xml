<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="6"
    android:columnCount="4"
    android:background="@color/black"
    tools:ignore="MissingConstraints">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id = "@+id/c"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:text="C"
        android:textSize="20dp"
        android:layout_row = "0"
        android:layout_column = "0"
        android:backgroundTint="@color/black"
        tools:ignore="MissingConstraints" />
   <Button
       android:layout_width="wrap_content"
       android:gravity="center"
       android:layout_height="100dp"
       android:id = "@+id/brc"
       android:text = "()"
       android:textSize="20dp"
       android:layout_columnWeight="1"
       android:layout_row = "0"
        android:textStyle="bold"
       android:backgroundTint="@color/black"
       android:layout_column = "1"/>
    <Button
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:backgroundTint="@color/black"
        android:layout_row="0"
        android:layout_column="2"
        android:text="%"
        android:id = "@+id/per"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />
  <Button
      android:layout_width="wrap_content"
      android:layout_height = "100dp"
      android:text = "\u00F7"
      android:textSize="20dp"
      android:textStyle="bold"
      android:gravity="center"
      android:layout_columnWeight="1"
      android:id = "@+id/div"
      android:backgroundTint="@color/black"
      android:layout_row = "0"
      android:layout_column="3"
      ></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id = "@+id/seven"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:text="7"
        android:textSize="20dp"
        android:layout_row = "1"
        android:layout_column = "0"
        android:backgroundTint="@color/black"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="100dp"
        android:id = "@+id/eight"
        android:text = "8"
        android:textSize="20dp"
        android:layout_columnWeight="1"
        android:layout_row = "1"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_column = "1"/>
    <Button
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:backgroundTint="@color/black"
        android:layout_row="1"
        android:layout_column="2"
        android:text="9"
        android:id = "@+id/nine"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height = "100dp"
        android:text = "X"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_columnWeight="1"
        android:id = "@+id/mul"
        android:backgroundTint="@color/black"
        android:layout_row = "1"
        android:layout_column="3"
        ></Button><Button
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:id = "@+id/four"
    android:layout_columnWeight="1"
    android:gravity="center"
    android:text="4"
    android:textSize="20dp"
    android:layout_row = "2"
    android:layout_column = "0"
    android:backgroundTint="@color/black"
    tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="100dp"
        android:id = "@+id/five"
        android:text = "5"
        android:textSize="20dp"
        android:layout_columnWeight="1"
        android:layout_row = "2"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_column = "1"/>
    <Button
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:backgroundTint="@color/black"
        android:layout_row="2"
        android:layout_column="2"
        android:text="6"
        android:id = "@+id/six"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height = "100dp"
        android:text = "-"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_columnWeight="1"
        android:id = "@+id/minus"
        android:backgroundTint="@color/black"
        android:layout_row = "2"
        android:layout_column="3"
        ></Button><Button
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:id = "@+id/one"
    android:layout_columnWeight="1"
    android:gravity="center"
    android:text="1"
    android:textSize="20dp"
    android:layout_row = "3"
    android:layout_column = "0"
    android:backgroundTint="@color/black"
    tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="100dp"
        android:id = "@+id/two"
        android:text = "2"
        android:textSize="20dp"
        android:layout_columnWeight="1"
        android:layout_row = "3"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_column = "1"/>
    <Button
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:backgroundTint="@color/black"
        android:layout_row="3"
        android:layout_column="2"
        android:text="3"
        android:id = "@+id/three"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height = "100dp"
        android:text = "+"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_columnWeight="1"
        android:id = "@+id/plus"
        android:backgroundTint="@color/black"
        android:layout_row = "3"
        android:layout_column="3"
        ></Button><Button
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:id = "@+id/zero"
    android:layout_columnWeight="1"
    android:gravity="center"
    android:text="0"
    android:textSize="20dp"
    android:layout_row = "4"
    android:layout_column = "0"
    android:backgroundTint="@color/black"
    tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"

        android:text = ""

        android:layout_columnWeight="1"
        android:layout_row = "4"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_column = "1"/>
    <Button
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:backgroundTint="@color/black"
        android:layout_row="4"
        android:layout_column="2"
        android:text="."
        android:id = "@+id/point"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height = "100dp"
        android:text = "="
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_columnWeight="1"
        android:id = "@+id/equal"
        android:backgroundTint="@color/black"
        android:layout_row = "4"
        android:layout_column="3"
        ></Button>
</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
